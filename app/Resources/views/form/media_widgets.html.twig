{% block choice_widget %}
    {% spaceless %}
        {% if expanded %}
                {% for child in form if not child.rendered %}
                    <div class="form-field radio">
                        <label for="{{child.vars.id}}">
                            {{ form_widget(child) }}
                            <span class="icon"></span>
                            <span class="text">{{child.vars.label|trans}}</span>
                        </label>
                    </div>
                {% endfor %}
        {% else %}
            {# let the choice widget render the select tag #}
            {{ block('choice_widget') }}
        {% endif %}
    {% endspaceless %}
{% endblock %}