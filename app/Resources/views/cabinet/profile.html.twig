        </section>
        <section class="site-flex-item x2 m10">
            <div class="form-field text">
            {{ form_row(form.phone, {'label': 'Phone:'}) }}
            </div>
        </section>
        <section class="site-flex-item x2 m10">
            <div class="form-field text select">
            {{ form_row(form.login, {'label': 'E-mail (login):'}) }}
            </div>
        </section>
        <section class="site-flex-item x2 m10">
            <div class="form-field text select">
            {{ form_row(form.country, {'label': 'Country'|trans ~ ':'}) }}
            </div>
        </section>
        <section class="site-flex-item x2 m10">
            <div class="form-field text select">
            {{ form_row(form.city, {'label': 'City'|trans ~ ':'}) }}
            </div>
        </section>
    </section>
    <div class="site-flex site-flow flex-wrap site-form form-flow-vertical {{ designer ? ' d-red' : '' }}">
        {{ form_row(form.brandImage, {'label': 'Фото бренда'}) }}
        <span class="svg icon"></span>
    </div>
    <div class="form-field select form-field-margin-flow text center big {{ designer ? ' d-red' : '' }}">
        {{ form_row(form.brand, {'label': 'user.brand'|trans ~ ':'}) }}
        <span class="svg icon"></span>
    </div>
    <div class="alert alert-danger">
        Для работы с разделами дизайнера требуется заполнить поля имя бренда, фото бренда, фото аватара
    </div>
    <div class="form-field select form-field-margin-flow text center big">
        {{ form_row(form.textRaw, {'label': 'Text Type'|trans ~ ':'}) }}
        <span class="svg icon"></span>
    </div>
    <div class="form-field select form-field-margin-flow text center big">
        {{ form_row(form.deliveryRaw, {'label': 'Delivery Type'|trans ~ ':'}) }}
        <span class="svg icon"></span>
    </div>
    <div class="form-field select form-field-margin-flow text center big">
        {{ form_row(form.paymentRaw, {'label': 'Payment Type'|trans ~ ':'}) }}
        <span class="svg icon"></span>
    </div>
    <div class="form-field select form-field-margin-flow text center big">
        {{ form_row(form.conditionRaw, {'label': 'Condition Type'|trans ~ ':'}) }}
        <span class="svg icon"></span>
    </div>
    <section class="site-flex site-flow flex-wrap site-form form-flow-vertical">
        <section class="site-flex-item x3 m10">
            <div class="form-field text">
            {{ form_row(form.site, {'label': 'Site'|trans ~ ':'}) }}
            </div>
        </section>
        <section class="site-flex-item x3 m10">
            <div class="form-field text">
            {{ form_row(form.instagram, {'label': 'Instagram'|trans ~ ':'}) }}
            </div>
        </section>
        <section class="site-flex-item x3 m10">
            <div class="form-field text select">
            {{ form_row(form.vk, {'label': 'Vk'|trans ~ ':'}) }}
            </div>
        </section>
        <section class="site-flex-item x3 m10">
            <div class="form-field text select">
            {{ form_row(form.behance, {'label': 'Behance'|trans ~ ':'}) }}
            </div>
        </section>
        <section class="site-flex-item x3 m10">
            <div class="form-field text select">
            {{ form_row(form.facebook, {'label': 'Facebook'|trans ~ ':'}) }}
            </div>
        </section>
        <section class="site-flex-item x3 m10">
            <div class="form-field text select">
            {{ form_row(form.twitter, {'label': 'Twitter'|trans ~ ':'}) }}
            </div>
        </section>
        <section class="site-flex-item x1 m10">
            <div class="form-field form-field-margin-flow radio-group form-group__row form-group__row--3">
            {{ form_row(form.userType, {'label': 'Tarif'|trans ~ ':'}) }}
            </div>
        </section>
    </section>

    <button class="site-button yellow w-full big form-field-margin-flow"><span class="text">СОХРАНИТЬ</span></button>
    {% for label, flashes in app.session.flashbag.all %}
        {% for flash in flashes %}
            <div class="alert alert-{{ label }}">
                {{ flash|trans }}
            </div>
        {% endfor %}
    {% endfor %}
    {{ form_errors(form) }}
{{ form_end(form) }}
{% endblock %}